<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/LlMenuPeliculas"
        android:padding="20dp"
        android:gravity="center">

        <!-- Welcome Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMensaje"
            android:text="Menu AppPeliculas"
            android:textAlignment="center"
            android:textSize="26sp"
            android:layout_marginBottom="30dp"
            android:textColor="@android:color/black"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BtnAgregarPeliculas"
            android:text="Agregar Películas"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="#1B3A57"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="12dp"/>

        <!-- Botón: Catálogo de Películas -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BtnCatalogoPeliculas"
            android:text="Catálogo de Películas"
            android:layout_marginHorizontal="40dp"
            android:background="#1B3A57"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="12dp"/>

    </LinearLayout>

</FrameLayout>


